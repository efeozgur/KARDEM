<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - KARDEM</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Sol Menü Aç-Kapa -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Sağ Menü -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link text-danger" asp-controller="Giris" asp-action="Cikis">
                        <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Logo -->
            <a href="@Url.Action("Dashboard", "Admin")" class="brand-link">
                <i class="fas fa-scale-balanced ml-2 mr-2"></i>
                <span class="brand-text font-weight-light">KARDEM Panel</span>
            </a>

            <!-- Sidebar Menü -->
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" role="menu">
                        <li class="nav-item">
                            <a href="@Url.Action("Dashboard", "Admin")" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Admin")" class="nav-link">
                                <i class="nav-icon fas fa-tools"></i>
                                <p>Admin Panel</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("YetkiListesi", "Admin")" class="nav-link">
                                <i class="nav-icon fas fa-link"></i>
                                <p>Yetki Listesi</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- İçerik Alanı -->
        <div class="content-wrapper">
            <section class="content pt-4 px-3">
                @RenderBody()
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer text-sm text-center">
            <strong>KARDEM &copy; @DateTime.Now.Year</strong> - Tüm Hakları Saklıdır.
        </footer>
    </div>

    <!-- JS Dosyaları -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
</body>
</html>