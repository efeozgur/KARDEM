@model KARDEM.Models.Dosya
@{
    ViewData["Title"] = "Dosya Ekle";
    Layout = "~/Views/Shared/_LayoutMudur.cshtml";
    var mahkeme = ViewBag.Mahkeme as KARDEM.Models.Mahkeme;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">📄 @mahkeme.Ad için Dosya Ekle</h5>
        </div>
        <div class="card-body">
            <form asp-action="DosyaEkle" method="post">
                <input type="hidden" asp-for="MahkemeId" value="@mahkeme.Id" />
                <div class="form-group">
                    <label>Esas No</label>
                    <input asp-for="EsasNo" class="form-control" required />
                </div>
                <div class="form-group mt-2">
                    <label>Karar No</label>
                    <input asp-for="KararNo" class="form-control" required />
                </div>
                <div class="form-group mt-2">
                    <label>Karar Tarihi</label>
                    <input asp-for="KararTarihi" type="date" class="form-control" required />
                </div>
                <div class="form-group mt-2">
                    <label>Kararın Tebliğ Tarihi</label>
                    <input asp-for="KararTebligTarihi" type="date" class="form-control" required />
                </div>
                <div class="form-group mt-2">
                    <label>Dosya Notu (Opsiyonel)</label>
                    <textarea asp-for="DosyaNotu" class="form-control" rows="2"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
                <a asp-action="Panel" class="btn btn-secondary mt-3">İptal</a>
            </form>
        </div>
    </div>
</div>