@model KARDEM.Models.IstinafBilgisi
@{
    ViewData["Title"] = "İstinaf Bilgisi Güncelle";
    Layout = "~/Views/Shared/_LayoutMudur.cshtml";
    var dosya = ViewBag.Dosya as KARDEM.Models.Dosya;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">📝 @dosya.EsasNo / @dosya.KararNo için İstinaf Güncelleme</h5>
        </div>
        <div class="card-body">
            <form asp-action="IstinafGuncelle" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="DosyaId" />

                <div class="form-group mb-2">
                    <label>İstinaf Eden Taraf</label>
                    <select asp-for="IstinafEdenTaraf" class="form-control" required>
                        <option value="">-- Seçiniz --</option>
                        <option value="Davacı">Davacı</option>
                        <option value="Davalı">Davalı</option>
                        <option value="Her İki Taraf">Her İki Taraf</option>
                    </select>
                </div>

                <div class="form-group mb-2">
                    <label>İstinaf Tarihi</label>
                    <input asp-for="IstinafTarihi" type="date" class="form-control" required />
                </div>

                <div class="form-group mb-2">
                    <label>İstinaf Dilekçesinin Karşı Tarafa Tebliği</label>
                    <input asp-for="DilekceTebligTarihi" type="date" class="form-control" />
                </div>

                <div class="form-check mb-2">
                    <input asp-for="SureKontroluYapildiMi" class="form-check-input" type="checkbox" />
                    <label class="form-check-label">Süre kontrolü yapıldı</label>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="DosyaGonderildiMi" class="form-check-input" type="checkbox" />
                    <label class="form-check-label">Dosya gönderildi</label>
                </div>

                <button type="submit" class="btn btn-success">Güncelle</button>
                <a asp-action="Panel" class="btn btn-secondary">İptal</a>
            </form>
        </div>
    </div>
</div>